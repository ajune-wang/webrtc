import("../../../webrtc.gni")

rtc_source_set("base64") {
  visibility = [ "*" ]
  sources = [
    "base64.cc",
    "base64.h",
  ]
}

if (rtc_include_tests) {
  rtc_source_set("base64_unittest") {
    testonly = true
    if (is_msan) {
      cflags = [ "-fsanitize=memory" ]
    }
    sources = [
      "base64_unittest.cc",
    ]
    deps = [
      ":base64",
      "../../../test:test_support",
      "//rtc_base:logging",
      "//rtc_base:rtc_base_tests_utils",
      "//rtc_base:stringutils",
    ]
  }
}
